<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Jobs By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @if(ViewBag.columns != null){
        @foreach (var column in ViewBag.columns)
        {
            <th>@column.Value</th>

        <table class="job-listing">
            <tr>
                <th>ID</th>
                <td>@job.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@job.Name</td>
            </tr>
            <tr>
                <th>Employer</th>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>@job.Location</td>
            </tr>
            <tr>
                <th>Position Type</th>
                <td>@job.PositionType</td>
            </tr>
            <tr>
                <th>Core Competency</th>
                <td>@job.CoreCompetency</td>
            </tr>
        </table>
    }
        }
        
    </tr>
    <tr>
        <!-- TODO #2: Complete the View Jobs By Category Table. -->

        <td>
            <a asp-controller="List" asp-action="Jobs" asp-route-column="All" asp-route-value="View All">View All</a>
        </td> <!-- Feel free to remove or modify this element if necessary. -->
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @foreach (var item in category.Value)
                    {
                        <li>

                            <a asp-controller="List" asp-action="Jobs" asp-route-column="@category.Key" asp-route-value="@item">@item</a>
                        </li>
                    }

                </ul>
            </td>
        }
    </tr>
</table>
